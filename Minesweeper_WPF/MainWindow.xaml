<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Minesweeper_WPF.MainWindow"
        Title="Minesweeper" Height="345" Width="520" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" MouseLeftButtonUp="Mainwindow_MouseLeftButtonUp" MouseRightButtonUp="Mainwindow_MouseRightButtonUp">
    <Grid x:Name="grid_main">
        <Rectangle x:Name="rec_game" Margin="0,25,0,0" Fill="#FFF4F4F5" Stroke="Black"/>
        <Label x:Name="lb_time" Content="00:00" Margin="236,2,0,0" VerticalAlignment="Top" Height="20" Padding="0" FontSize="15" HorizontalAlignment="Left"/>
        <Button Content="New Game" HorizontalAlignment="Left" Margin="3,3,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lb_progress" Content="Progress: 0,00%" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</Window>
